Subject: [PATCH 1/6] feat(Docker): Add Dockerfile e dockerignore basicos

---
 Estacionamento/.dockerignore |  9 +++++++++
 Estacionamento/Dockerfile    | 19 +++++++++++++++++++
 2 files changed, 28 insertions(+)
 create mode 100644 Estacionamento/.dockerignore
 create mode 100644 Estacionamento/Dockerfile

diff --git a/Estacionamento/.dockerignore b/Estacionamento/.dockerignore
new file mode 100644
index 0000000..965896c
--- /dev/null
+++ b/Estacionamento/.dockerignore
@@ -0,0 +1,9 @@
+**/[b|B]in/
+**/[O|o]bj/
+.vs/
+*.suo
+*.user
+*.userprefs
+packages/
+*.env
+appsettings.Development.json
\ No newline at end of file
diff --git a/Estacionamento/Dockerfile b/Estacionamento/Dockerfile
new file mode 100644
index 0000000..c26c259
--- /dev/null
+++ b/Estacionamento/Dockerfile
@@ -0,0 +1,19 @@
+FROM mcr.microsoft.com/dotnet/sdk:3.1 AS build
+WORKDIR /src
+
+COPY Estacionamento.Console/Estacionamento.App.csproj Estacionamento.Console/
+COPY Estacionamento.Domain/Estacionamento.Domain.csproj Estacionamento.Domain/
+COPY Estacionamento.sln .
+
+RUN dotnet restore Estacionamento.sln
+
+COPY . .
+
+WORKDIR /src/Estacionamento.Console
+RUN dotnet publish -c Release -o /app/publish
+
+# Runtime
+FROM mcr.microsoft.com/dotnet/aspnet:3.1 AS final
+WORKDIR /app
+COPY --from=build /app/publish .
+ENTRYPOINT [ "dotnet", "Estacionamento.App.dll" ]
